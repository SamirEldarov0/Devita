@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}


<div class="slider-area">

    <div class="slider-active owl-dot-style owl-carousel">
        @foreach (var item in Model.Sliders)
        {
            <div class="single-slider pt-90 pb-110 bg-img slider-height-1" style="background-image:url(../assets/img/slider/@item.BgImg);">
                <div class="container">
                    <div class="slider-content slider-animated-1">
                        <h5 class="animated">@item.Title</h5>
                        <h2 class="animated">@item.Subtitle</h2>
                        <h3 class="animated"><span>Starting at </span> $@item.StartPrice</h3>
                        <div class="slider-btn mt-75">
                            <a class="animated">@item.BtnTxt</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="banner-area banner-negative-mrg-2">
    <div class="container-fluid p-0">
        <div class="row g-0">
            @foreach (var item in Model.UpPromotions)
            {
                  <div class="col-lg-6 col-md-6">
                        <div class="banner-img banner-hover">
                            <a asp-action="index"><img alt="" src="~/assets/img/banner/@item.Img"></a>
                        </div>
                  </div>
            }
        </div>
    </div>
</div>
<div class="product-area pt-65 pb-30">
    <div class="container">
        <div class="product-tab-list mb-30 nav" role="tablist">
            <a class="active" data-bs-toggle="tab">
                <h4>New Arrivals</h4>
            </a>
            <a data-bs-toggle="tab">
                <h4> Featured</h4>
            </a>
            <a data-bs-toggle="tab">
                <h4>Top Rated</h4>
            </a>
        </div>
        <div class="tab-content jump">
            <div class="tab-pane active" id="home1">
                <div class="custom-row">
                    @await Html.PartialAsync("_ViewPartialProduct",Model.NewProducts)
                </div>
            </div>
            <div class="tab-pane" id="home2">
